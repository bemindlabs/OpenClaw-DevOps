{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "OpenClaw DevOps - Shadow & Elevation Tokens",
  "shadows": {
    "none": "none",
    "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.5)",
    "base": "0 1px 3px 0 rgba(0, 0, 0, 0.6), 0 1px 2px -1px rgba(0, 0, 0, 0.6)",
    "md": "0 4px 6px -1px rgba(0, 0, 0, 0.6), 0 2px 4px -2px rgba(0, 0, 0, 0.6)",
    "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.6), 0 4px 6px -4px rgba(0, 0, 0, 0.6)",
    "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.6), 0 8px 10px -6px rgba(0, 0, 0, 0.6)",
    "2xl": "0 25px 50px -12px rgba(0, 0, 0, 0.7)",
    "inner": "inset 0 2px 4px 0 rgba(0, 0, 0, 0.6)"
  },
  "glows": {
    "green-sm": "0 0 10px rgba(34, 197, 94, 0.3)",
    "green-md": "0 0 20px rgba(34, 197, 94, 0.4)",
    "green-lg": "0 0 30px rgba(34, 197, 94, 0.5)",
    "green-xl": "0 0 40px rgba(34, 197, 94, 0.6)",
    "accent-sm": "0 0 10px rgba(16, 185, 129, 0.3)",
    "accent-md": "0 0 20px rgba(16, 185, 129, 0.4)",
    "accent-lg": "0 0 30px rgba(16, 185, 129, 0.5)"
  },
  "elevation": {
    "0": {
      "shadow": "none",
      "description": "Base level, no elevation"
    },
    "1": {
      "shadow": "0 1px 3px 0 rgba(0, 0, 0, 0.6), 0 1px 2px -1px rgba(0, 0, 0, 0.6)",
      "description": "Slightly raised, subtle depth"
    },
    "2": {
      "shadow": "0 4px 6px -1px rgba(0, 0, 0, 0.6), 0 2px 4px -2px rgba(0, 0, 0, 0.6)",
      "description": "Raised cards, buttons on hover"
    },
    "3": {
      "shadow": "0 10px 15px -3px rgba(0, 0, 0, 0.6), 0 4px 6px -4px rgba(0, 0, 0, 0.6)",
      "description": "Dropdowns, popovers"
    },
    "4": {
      "shadow": "0 20px 25px -5px rgba(0, 0, 0, 0.6), 0 8px 10px -6px rgba(0, 0, 0, 0.6)",
      "description": "Modals, dialogs"
    },
    "5": {
      "shadow": "0 25px 50px -12px rgba(0, 0, 0, 0.7)",
      "description": "Highest elevation, overlays"
    }
  },
  "borders": {
    "default": "1px solid #3f3f46",
    "thick": "2px solid #3f3f46",
    "focus": "2px solid #22c55e",
    "error": "2px solid #ef4444"
  },
  "borderRadius": {
    "none": "0",
    "sm": "0.25rem",
    "base": "0.375rem",
    "md": "0.5rem",
    "lg": "0.75rem",
    "xl": "1rem",
    "2xl": "1.5rem",
    "3xl": "2rem",
    "full": "9999px"
  }
}
