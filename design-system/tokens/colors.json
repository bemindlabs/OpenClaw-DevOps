{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "OpenClaw DevOps - Color Tokens (Green & Black Theme)",
  "colors": {
    "primary": {
      "50": "#f0fdf4",
      "100": "#dcfce7",
      "200": "#bbf7d0",
      "300": "#86efac",
      "400": "#4ade80",
      "500": "#22c55e",
      "600": "#16a34a",
      "700": "#15803d",
      "800": "#166534",
      "900": "#14532d",
      "950": "#052e16"
    },
    "accent": {
      "50": "#ecfdf5",
      "100": "#d1fae5",
      "200": "#a7f3d0",
      "300": "#6ee7b7",
      "400": "#34d399",
      "500": "#10b981",
      "600": "#059669",
      "700": "#047857",
      "800": "#065f46",
      "900": "#064e3b",
      "950": "#022c22"
    },
    "neutral": {
      "50": "#fafafa",
      "100": "#f4f4f5",
      "200": "#e4e4e7",
      "300": "#d4d4d8",
      "400": "#a1a1aa",
      "500": "#71717a",
      "600": "#52525b",
      "700": "#3f3f46",
      "800": "#27272a",
      "900": "#18181b",
      "950": "#09090b"
    },
    "semantic": {
      "success": {
        "light": "#22c55e",
        "DEFAULT": "#16a34a",
        "dark": "#15803d"
      },
      "error": {
        "light": "#f87171",
        "DEFAULT": "#ef4444",
        "dark": "#dc2626"
      },
      "warning": {
        "light": "#fbbf24",
        "DEFAULT": "#f59e0b",
        "dark": "#d97706"
      },
      "info": {
        "light": "#60a5fa",
        "DEFAULT": "#3b82f6",
        "dark": "#2563eb"
      }
    },
    "background": {
      "primary": "#09090b",
      "secondary": "#18181b",
      "tertiary": "#27272a",
      "elevated": "#3f3f46"
    },
    "surface": {
      "base": "#18181b",
      "raised": "#27272a",
      "overlay": "#3f3f46"
    },
    "text": {
      "primary": "#fafafa",
      "secondary": "#d4d4d8",
      "tertiary": "#a1a1aa",
      "inverse": "#09090b",
      "accent": "#22c55e"
    },
    "border": {
      "default": "#3f3f46",
      "hover": "#52525b",
      "focus": "#22c55e",
      "error": "#ef4444"
    },
    "interactive": {
      "default": "#22c55e",
      "hover": "#16a34a",
      "active": "#15803d",
      "disabled": "#3f3f46"
    }
  },
  "gradients": {
    "primary": "linear-gradient(135deg, #22c55e 0%, #10b981 100%)",
    "dark": "linear-gradient(180deg, #18181b 0%, #09090b 100%)",
    "accent": "linear-gradient(90deg, #22c55e 0%, #34d399 100%)",
    "subtle": "linear-gradient(180deg, rgba(34, 197, 94, 0.1) 0%, rgba(34, 197, 94, 0) 100%)"
  },
  "shadows": {
    "glow": "0 0 20px rgba(34, 197, 94, 0.3)",
    "glowStrong": "0 0 40px rgba(34, 197, 94, 0.5)"
  }
}
